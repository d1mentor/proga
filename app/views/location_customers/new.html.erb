<h1>Добавление нового заказчика к обьекту</h1>

<%= form_for @location_customer do |f| %>
	<%= f.label :customer_id, 'Заказчик' %>
	<%= f.select(:customer_id, Customer.all.collect {|p| [ p.name, p.id ] }) %>
	<br>

	<%= f.hidden_field :location_id, :value => params[:location_id] %>
	
	<%= f.submit 'Добавить' %>
<% end %>
