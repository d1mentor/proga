<h1>Добавление нового вида работы к обьекту</h1>

<%= form_for @location_work_type do |f| %>
	<%= f.label :work_type_id, 'Вид работы', class: "form-label"  %>
	<%= f.select(:work_type_id, WorkType.all.collect {|p| [ p.name, p.id ] }, {}, { class: 'form-control' })%>
	<br>
	<%= f.label :price, 'Цена которую платит заказчик', class: "form-label"  %>
	<%= f.text_field :price, class: "form-control" %>
	<br>
	<%= f.label :accord_price, 'Цена для рабочего', class: "form-label"  %>
	<%= f.text_field :accord_price, class: "form-control" %>
	<br>
	<%= f.label :start_date, 'Дата начала работы (дд.мм.гггг)', class: "form-label"  %>
	<%= f.date_field :start_date, :id => "datepicker", class: "form-control" %>
	<br>
	<%= f.label :size, 'Обьем', class: "form-label"  %>
	<%= f.text_field :size, class: "form-control" %>
	<br>

	<%= f.hidden_field :location_id, :value => params[:location_id] %>
	
	<%= f.submit 'Добавить', class: "btn btn-primary" %>
<% end %>