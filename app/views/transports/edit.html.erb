<h1>Редактирование <%= @transport.name %></h1>

<%= form_for @transport do |f| %>
	<%= f.label :name, 'Название транспорта', class: "form-label" %>
	<%= f.text_field :name, class: "form-control", default: @transport.name %>
	<br>
	<%= f.label :description, 'Модель транспорта', class: "form-label" %>
	<%= f.text_field :description, class: "form-control", default: @transport.description %>
	<br>
	<%= f.label :price, 'Цена', class: "form-label" %>
	<%= f.text_field :price, class: "form-control", default: @transport.price %>
	<br>
	<%= f.label :buy_date, 'Дата покупки', class: "form-label" %>
	<%= f.date_field :buy_date, :id => "datepicker", class: "form-control", default: @transport.buy_date %>
	<br>
	<%= f.label :to_date, 'Дата последнего ТО (дд.мм.гггг)', class: "form-label" %>
	<%= f.date_field :to_date, :id => "datepicker", class: "form-control", default: @transport.to_date %>
	<br>
	<%= f.label :insurance_date, 'До когда действует страховка (дд.мм.гггг)', class: "form-label" %>
	<%= f.date_field :insurance_date, :id => "datepicker", class: "form-control", default: @transport.insurance_date %>
	<br>
	

	<%= f.submit 'Внести изменения', class: "btn btn-primary" %>
<% end %>