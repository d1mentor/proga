<h1>Добавление нового транспорта</h1>

<%= form_for @transport do |f| %>
	<%= f.label :name, 'Название транспорта' %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :description, 'Модель транспорта' %>
	<%= f.text_field :description %>
	<br>
	<%= f.label :to_date, 'Дата последнего ТО (дд.мм.гггг)' %>
	<%= f.date_field :to_date, :id => "datepicker" %>
	<br>
	<%= f.label :insurance_date, 'До когда действует страховка (дд.мм.гггг)' %>
	<%= f.date_field :insurance_date, :id => "datepicker" %>
	<br>
	

	<%= f.submit 'Добавить' %>
<% end %>