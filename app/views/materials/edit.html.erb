<h1>Редактирование</h1>

<%= form_for @material do |f| %>
	<%= f.label :name, 'Название материала', class: "form-label" %>
	<%= f.text_field :name, class: "form-control", default: @material.name %>
	<br>
	<%= f.label :dimension, 'В чем измеряется материал?', class: "form-label" %>
	<%= f.text_field :dimension, class: "form-control", default: @material.dimension %>
	<br>

	<%= f.submit 'Добавить', class: "btn btn-primary" %>
<% end %>

