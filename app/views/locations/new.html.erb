<h1>Добавление нового объекта</h1>

<%= form_for @location do |f| %>
	<%= f.label :name, 'Название объекта', class: "form-label" %>
	<%= f.text_field :name, class: "form-control" %>
	<br>
	<%= f.label :adress, 'Адрес объекта', class: "form-label" %>
	<%= f.text_field :adress, class: "form-control" %>
	<br>
	<%= f.label :start_date, 'Дата начала работы (дд.мм.гггг)', class: "form-label" %>
	<%= f.date_field :start_date, :id => "datepicker", class: "form-control" %>
	<br>

	<%= f.submit 'Добавить', class: "btn btn-primary" %>
<% end %>
