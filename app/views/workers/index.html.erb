<h1>Работники <%= link_to "Добавить нового работника", new_worker_path, class: "btn btn-primary" %> </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ФИО</th>
      <th scope="col">Должность</th>
      <th scope="col">Телефон</th>
      <th scope="col">EMAIL</th>
      <th scope="col">Адрес</th>
      <th scope="col">Подробнее</th>
    </tr>
  </thead>
  <tbody>
	<% @workers.each do |worker| %>
    <tr>
      <th scope="row"><%= worker.id %></th>
      <td><%= worker.name %></td>
      <td><%= worker.position %></td>
      <td><%= worker.phone %></td>
      <td><%= worker.email %></td>
      <td><%= worker.adress %></td>
      <td><%= link_to "Подробнее", "workers/#{worker.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
