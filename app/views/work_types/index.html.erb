<h1>Виды работ <%= link_to "Добавить новый вид работ", new_work_type_path, class: "btn btn-primary" %> </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Название</th>
      <th scope="col">Мера</th>
      <th scope="col">Подробнее</th>
    </tr>
  </thead>
  <tbody>
	<% @work_types.each do |work_type| %>
    <tr>
      <th scope="row"><%= work_type.id %></th>
      <td><%= work_type.name %></td>
      <td><%= work_type.dimension %></td>
      <td><%= link_to "Подробнее", "work_types/#{work_type.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


