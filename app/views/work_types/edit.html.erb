<h1>Редактировать вид работы</h1>

<%= form_for @work_type do |f| %>
	<%= f.label :name, 'название вида работ', class: "form-label" %>
	<%= f.text_field :name, class: "form-control", default: @work_type.name %>
	<br>
	<%= f.label :dimension, 'В чем измеряется работа', class: "form-label" %>
	<%= f.text_field :dimension, class: "form-control", default: @work_type.dimension %>
	<br>

	<%= f.submit 'Внести изменения', class: "btn btn-primary" %>
<% end %>

