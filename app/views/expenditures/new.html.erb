<h1>Добавление нового расхода</h1>

<%= form_for @expenditure do |f| %>
	<%= f.label :name, 'Описание', class: "form-label" %>
	<%= f.text_field :name, class: "form-control" %>
	<br>
	<%= f.label :exp_date, 'Дата', class: "form-label" %>
	<%= f.date_field :exp_date, :id => "datepicker", class: "form-control" %>
	<br>
	<%= f.label :price, 'Цена', class: "form-label" %>
	<%= f.text_field :price, class: "form-control" %>
	<br>
	<%= f.submit 'Добавить', class: "btn btn-primary" %>
<% end %>
