<h1>Редактировать заказчика <%= @customer.name %></h1>

<%= form_for @customer do |f| %>
	<%= f.label :name, 'ФИО заказчика', class: "form-label" %>
	<%= f.text_field :name, class: "form-control", value: @customer.name %>
	<br>
	<%= f.label :company, 'Фирма', class: "form-label" %>
	<%= f.text_field :company, class: "form-control", value: @customer.company %>
	<br>
	<%= f.label :position, 'Должность', class: "form-label" %>
	<%= f.text_field :position, class: "form-control", value: @customer.position %>
	<br>
	<%= f.label :phone, 'Номер телефона', class: "form-label" %>
	<%= f.text_field :phone, class: "form-control", value: @customer.phone %>
	<br>
	<%= f.label :email, 'Электронная почта', class: "form-label" %>
	<%= f.text_field :email, class: "form-control", value: @customer.email %>
	<br>

	<%= f.submit 'Добавить', class: "btn btn-primary" %>
<% end %>
