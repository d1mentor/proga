<h1>Добавление нового заказчика</h1>

<%= form_for @customer do |f| %>
	<%= f.label :name, 'ФИО заказчика' %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :company, 'Фирма' %>
	<%= f.text_field :company %>
	<br>
	<%= f.label :position, 'Должность' %>
	<%= f.text_field :position %>
	<br>
	<%= f.label :phone, 'Номер телефона' %>
	<%= f.text_field :phone %>
	<br>
	<%= f.label :email, 'Электронная почта' %>
	<%= f.text_field :email %>
	<br>

	<%= f.submit 'Добавить' %>
<% end %>